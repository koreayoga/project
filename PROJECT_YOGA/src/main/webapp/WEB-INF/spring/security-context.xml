<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
	                    http://www.springframework.org/schema/security/spring-security.xsd
		                http://www.springframework.org/schema/beans 
		                http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="customAD" class="org.zerock.security.CustomAccessDeniedHandeler"/>	
	<bean id="customLS" class="org.zerock.security.CustomLoginSuccessHandeler"/>
	<bean id="BcryptPE" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>	                
	<bean id="customUS" class="org.zerock.security.CustomUserDetailsService"/>
	
	
	<security:http>
		<!-- 메인화면 접근 -->
		<security:intercept-url pattern="/main/*" access="permitAll"/>
		
		<!-- 마이페이지 접근 : 일반회원, 강사 -->
		<security:intercept-url pattern="/mypage/*" access="hasRole('MEMBER, TUTOR')"/>
		
		<!-- 게시판 접근 : 리스트/글조회:회원 모두, 등록/수정:강사, 관리자 -->
		<!-- <security:intercept-url pattern="/board/list" access="hasRole('MEMBER, TUTOR, ADMIN')"/>
		<security:intercept-url pattern="/board/get" access="hasRole('MEMBER, TUTOR, ADMIN')"/>
		<security:intercept-url pattern="/board/register" access="hasRole('TUTOR, ADMIN')"/>		
		<security:intercept-url pattern="/board/modify" access="hasRole('TUTOR, ADMIN')"/> -->	
			
		<!-- 수강신청페이지 접근 -->
		<security:intercept-url pattern="/lesson/**" access="hasRole('MEMBER, TUTOR, ADMIN')"/>
		
		<!-- 관리자페이지 접근 -->
		<security:intercept-url pattern="/admin/**" access="hasRole('ADMIN')"/>
		
		<!-- 접근권한 처리 -->		
		<security:access-denied-handler ref="customAD"/>
			
		<!-- 로그인처리 -->	
		<security:form-login login-page="/loginout/login" authentication-success-handler-ref="customLS"/>
						
		<!-- 로그인시 자동로그인 설정 : 유지기간 7일-->
		<security:remember-me data-source-ref="dataSource" token-validity-seconds="604800"/>
	
		<!-- 로그아웃시 자동로그인 종료 -->
		<security:logout logout-url="/loginout/logout" invalidate-session="true" delete-cookies="remember-me, JSESSION_ID"/>
	</security:http>
	
	<security:authentication-manager>
		<!-- 사용자 정보 조회 및 처리 -->		
		<security:authentication-provider user-service-ref="customUS">	
			<!-- 비밀번호 암호화 : BCryptPasswordEncoder -->
			<security:password-encoder ref="BcryptPE"/>			
		</security:authentication-provider>
	</security:authentication-manager>

</beans>

